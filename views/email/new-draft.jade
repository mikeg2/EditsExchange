head
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

div(style="\
        background-color: #c69c6d;\
        font-family: 'courier-new';\
        width: calc(100% - 2 * 0.5em);\
        padding: 0.5em;")
    div#title(style="\
            margin-bottom: 0.3em;\
        ")
        a(href="" style="\
                font-size: 2em;\
                color: black;\
                font-weight: bold;\
                opacity: 0.7;\
                display:inline\
            ") #{draft.title}
        h2(style="\
                font-size: 1.7em;\
                color: black;\
                font-weight: bold;\
                opacity: 0.3;\
                margin-bottom: 0.3em;\
                display: inline\
            ") By #{draft.author.username}
    #message-container(style="\
            background-color: white;\
            padding: 1em;\
            font-size: 1.5em;\
            margin-bottom: 0.7em;\
        ") #{message.text}
    .button(style="\
            width: 100%;\
            max-width: 7em;\
            padding: 0.7em;\
            font-size: 1.5em;\
            background-color: #A0773E;\
            text-align: center;\
            cursor: pointer;\
        ")
        a(href="editsexchange.com/user/messages" style="\
                font-size: inherit;\
                outline: none\
                font-family: inherit;\
                font: inherit;\
                color: inherit;\
                text-decoration: inherit;\
                font-weight: inherit;\
            ") Reply
